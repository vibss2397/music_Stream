<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.iq.vibhu.musicplayer">
    <uses-sdk android:minSdkVersion="14" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity android:name=".song.MainActivity"
                  android:label="@string/app_name"
                  android:launchMode="singleTop"
                  android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <service android:name="com.iq.vibhu.musicplayer.song.MusicService" />

        <activity android:name=".wifi_direct.wifi"
                  android:label="@string/wifi_Activity"
                  android:launchMode="singleTop"
                  android:screenOrientation="portrait"
                  android:parentActivityName=".song.MainActivity"
                  >
        </activity>

        <service android:enabled="true" android:name=".wifi_direct.FileTransferService" />
    </application>

</manifest>